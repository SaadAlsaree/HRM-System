@{
    ViewData["Title"] = "اشعارات التنبية";
}


<div class="row align-items-center">
    <div class="border-0 mb-4">
        <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
            <h3 class="fw-bold mb-0">@ViewData["Title"]</h3>
        </div>
    </div>
</div> <!-- Row end  -->
<div class="row clearfix g-3">
    <div class="col-sm-12">
        <div class="card mb-3">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="row">
                            <div class="col-md-2">
                                <select class="form-select">
                                    <option value="-1" selected>عرض كل الحالات</option>
                                    <option>تم الإجراء</option>
                                    <option>قيد التدقيق</option>
                                    <option>قيد الانتظار</option>
                                    <option>قيد محذوف</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group flex-nowrap input-group">
                                    <input type="search" class="form-control" placeholder="بحث..." aria-label="search" aria-describedby="search_btn">
                                    <button type="button" class="input-group-text btn btn-primary" id="search_btn"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                            <div class="col-md-3">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-primary btn-block w-100">تحميل ملف Excel</button>
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table table-hover table-bordered">


                    <thead class="bg_table">
                        <tr class="text-center">
                                            <th scope="col" >اسم الموظف</th>
                                            <th scope="col" >مدة الدراسة</th>
                                            <th scope="col" >تاريخ الانفكاك</th>
                                            <th scope="col" >تاريخ المباشرة</th>
                                            <th scope="col">عدد الأيام المتبقية</th>
                                            <th scope="col">الحالة</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                        <tr class="text-center">
                                            <td>اسم الموظف 1</td>
                                            <td>مدة الدراسة 1</td>
                                            <td>تاريخ الانفكاك 1</td>
                                            <td>تاريخ المباشرة 1</td>
                                            <td>عدد الأيام المتبقية 1</td>
                            <td><span class="badge badge_custom  w-100 bg-success">تم الأجراء</span></td>
                                        </tr>
                        <tr class="text-center">
                                            <td>اسم الموظف 2</td>
                                            <td>مدة الدراسة 2</td>
                                            <td>تاريخ الانفكاك 2</td>
                                            <td>تاريخ المباشرة 2</td>
                                            <td>عدد الأيام المتبقية 2</td>
                            <td><span class="badge badge_custom  w-100 bg-success">تم الأجراء</span></td>
                                        </tr>
                                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">السابق</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">التالي</a>
                                        </li>
                                    </ul>
                                </nav>
                            </td>
                        </tr>
                    </tfoot>
                                </table>



            </div>
        </div>
    </div>
</div><!-- Row End -->